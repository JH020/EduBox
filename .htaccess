RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L] 

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l

RewriteRule ^(.*)$ pages/$1 [QSA,L]

ErrorDocument 500 '<html><script>window.location.href = "index";</script></html>'
ErrorDocument 404 '<html><script>window.location.href = "index";</script></html>'
ErrorDocument 403 '<html><script>window.location.href = "index";</script></html>'
